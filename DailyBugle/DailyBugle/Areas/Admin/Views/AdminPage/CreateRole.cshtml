
@{
    ViewBag.Title = "CreateRole";
}

<h2>CreateRole</h2>

@using (Html.BeginForm("CreateRole", "AdminPage", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            <label class="control-label">Role Name</label>
            <input class="form-control" type="text" name="txtRoleName" required/>
        </div>
    </div>
    <div class="row">
        <button type="submit" value="Submit" class="btn btn-primary">Save</button>
    </div>

}