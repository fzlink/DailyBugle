@model DailyBugle.Models.Category
@{
    ViewBag.Title = "CreateCategory";
}

<h2>CreateCategory</h2>

@using (Html.BeginForm("CreateCategory", "AdminPage", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-6">
            <label class="control-label">Category Name</label>
            <input class="form-control" type="text" name="txtCategoryName" required />
            @{ 
                if (ViewBag.AlreadyExists)
                {
                    <label style="color:red" class="has-error">The Category Already Exists</label>
                }
            }
        </div>
    </div>
    <div class="row">
        <button type="submit" value="Submit" class="btn btn-primary">Save</button>
    </div>

}